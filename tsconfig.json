{
  "compilerOptions": {
    "paths" : {
      "src/*": ["./src/*"]
    },
    "outDir": "dist",
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
